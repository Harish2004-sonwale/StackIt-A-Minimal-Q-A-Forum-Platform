# Server Environment
PORT=5000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/stackit

# JWT Configuration
JWT_SECRET=your-secret-key
SESSION_SECRET=your-session-secret

# Frontend URL
CLIENT_URL=https://stackit-frontend.onrender.com

# API Configuration
API_URL=https://stackit-backend.onrender.com/api

# CORS Configuration
ALLOWED_ORIGINS=https://stackit-frontend.onrender.com

# Monitoring Configuration
MONITORING_INTERVAL=300000
MONITORING_LOGS_DIR=logs

# Backup Configuration
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=7

# Error Handling
ERROR_LOGS_DIR=error_logs
MAX_ERROR_LOGS=100
